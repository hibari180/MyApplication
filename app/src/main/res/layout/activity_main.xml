<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/recycle_view_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩安卓列表：线性模式"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/recycle_view_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩安卓列表：网格模式"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycle_view_linear" />

    <Button
        android:id="@+id/recycle_view_StaggerGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩安卓列表：瀑布流模式"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycle_view_grid" />
</androidx.constraintlayout.widget.ConstraintLayout>